{
    "name": "electron-vite-app",
    "version": "1.0.0",
    "description": "Vite + Electron app with Redux and SQLite",
    "main": "dist-electron/main.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "preview": "vite preview",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "tsc && vite build && electron-builder",
        "postinstall": "electron-rebuild"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.0.1",
        "better-sqlite3": "^9.2.2",
        "dexie": "^4.2.1",
        "drizzle-orm": "^0.29.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.0.4"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.8",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "drizzle-kit": "^0.20.7",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "electron-rebuild": "^3.2.9",
        "typescript": "^5.3.3",
        "vite": "^5.0.8",
        "vite-plugin-electron": "^0.28.2",
        "vite-plugin-electron-renderer": "^0.14.5",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.electronvite.app",
        "productName": "Electron Vite App",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ]
        }
    }
}
